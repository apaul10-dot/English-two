<%- include('partials/header') %>

<div class="container">
    <h1>Food Waste Sorting Game</h1>
    <div class="score">Score: <span id="score">0</span></div>
    <div class="message" id="message">Drag food items to the correct bins!</div>
    
    <div class="game-area">
        <div id="food-items" class="food-items-container">
            <!-- Food items will be added here by JavaScript -->
        </div>
        
        <div class="bins">
            <div class="bin" id="recycle-bin" ondrop="drop(event)" ondragover="allowDrop(event)">
                <div class="bin-label">Recycle</div>
            </div>
            <div class="bin" id="compost-bin" ondrop="drop(event)" ondragover="allowDrop(event)">
                <div class="bin-label">Compost</div>
            </div>
            <div class="bin" id="trash-bin" ondrop="drop(event)" ondragover="allowDrop(event)">
                <div class="bin-label">Trash</div>
            </div>
        </div>
    </div>
    
    <button class="restart-btn" onclick="restartGame()">Restart Game</button>
</div>

<style>
    body {
        font-family: 'Comic Sans MS', cursive, sans-serif;
        background: linear-gradient(135deg, #e0f7fa 0%, #e3f2fd 100%);
        margin: 0;
        min-height: 100vh;
    }
    .container {
        max-width: 800px;
        margin: 80px auto 20px;
        padding: 20px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(26, 115, 232, 0.10);
    }
    h1 {
        color: #2c5282;
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
    }
    .game-area {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }
    .food-items-container {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        justify-content: center;
    }
    .food-item {
        width: 100px;
        height: 100px;
        background-color: #fff;
        border: 3px solid #4299e1;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: transform 0.2s;
        font-size: 24px;
    }
    .food-item:hover {
        transform: scale(1.1);
    }
    .bins {
        display: flex;
        gap: 20px;
        margin-top: 20px;
        flex-wrap: wrap;
        justify-content: center;
    }
    .bin {
        width: 120px;
        height: 150px;
        background-color: #e2e8f0;
        border: 3px solid #4a5568;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 10px;
    }
    .bin-label {
        font-weight: bold;
        margin-bottom: 10px;
    }
    .score {
        font-size: 24px;
        color: #2c5282;
        margin: 20px 0;
        text-align: center;
    }
    .message {
        font-size: 20px;
        color: #2c5282;
        text-align: center;
        margin: 20px 0;
        min-height: 30px;
    }
    .restart-btn {
        background-color: #4299e1;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 18px;
        margin: 20px auto;
        display: block;
        transition: background-color 0.2s;
    }
    .restart-btn:hover {
        background-color: #2b6cb0;
    }
    @media (max-width: 600px) {
        .container {
            margin: 70px 8px 20px;
            padding: 15px;
        }
        h1 {
            font-size: 1.8rem;
        }
        .food-item {
            width: 80px;
            height: 80px;
            font-size: 20px;
        }
        .bin {
            width: 100px;
            height: 130px;
        }
        .score, .message {
            font-size: 18px;
        }
    }
</style>

<script>
    const foodItems = [
        { name: 'ðŸŽ', type: 'compost' },
        { name: 'ðŸ¥¤', type: 'recycle' },
        { name: 'ðŸ•', type: 'compost' },
        { name: 'ðŸ¥«', type: 'recycle' },
        { name: 'ðŸŒ', type: 'compost' },
        { name: 'ðŸ¥¤', type: 'recycle' },
        { name: 'ðŸª', type: 'trash' },
        { name: 'ðŸ¥—', type: 'compost' },
        { name: 'ðŸ“¦', type: 'recycle' }
    ];

    let score = 0;
    let remainingItems = [...foodItems];

    function initializeGame() {
        const foodItemsContainer = document.getElementById('food-items');
        foodItemsContainer.innerHTML = '';
        
        remainingItems.forEach((item, index) => {
            const foodElement = document.createElement('div');
            foodElement.className = 'food-item';
            foodElement.draggable = true;
            foodElement.id = `food-${index}`;
            foodElement.innerHTML = item.name;
            foodElement.setAttribute('data-type', item.type);
            
            foodElement.addEventListener('dragstart', drag);
            foodItemsContainer.appendChild(foodElement);
        });
    }

    function drag(ev) {
        ev.dataTransfer.setData("text", ev.target.id);
    }

    function allowDrop(ev) {
        ev.preventDefault();
    }

    function drop(ev) {
        ev.preventDefault();
        const data = ev.dataTransfer.getData("text");
        const draggedElement = document.getElementById(data);
        const binType = ev.target.closest('.bin').id.replace('-bin', '');
        const itemType = draggedElement.getAttribute('data-type');

        if (binType === itemType) {
            score += 10;
            document.getElementById('score').textContent = score;
            document.getElementById('message').textContent = 'Correct! Well done! ðŸŽ‰';
            draggedElement.style.display = 'none';
            
            // Remove the item from remaining items
            const index = remainingItems.findIndex(item => item.name === draggedElement.innerHTML);
            if (index > -1) {
                remainingItems.splice(index, 1);
            }

            // Check if game is complete
            if (remainingItems.length === 0) {
                document.getElementById('message').textContent = 'Congratulations! You completed the game! ðŸŽ‰';
            }
        } else {
            document.getElementById('message').textContent = 'Try again! That\'s not the right bin.';
        }
    }

    function restartGame() {
        score = 0;
        document.getElementById('score').textContent = score;
        document.getElementById('message').textContent = 'Drag food items to the correct bins!';
        remainingItems = [...foodItems];
        initializeGame();
    }

    // Initialize the game when the page loads
    window.onload = initializeGame;
</script> 